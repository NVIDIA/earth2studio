# Earth2Studio API Environment Configuration
# Copy this file to .env and modify as needed

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
# Directory where workflow outputs will be stored
DEFAULT_OUTPUT_DIR=/outputs

# Queue Management
MAX_QUEUE_SIZE=10  # Maximum number of inference jobs that can be queued at once

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO

# Workflow Auto-Discovery Configuration
# Set paths to directories containing custom workflow files
# Multiple directories can be separated by commas or colons
# Examples:
#   Single directory:       WORKFLOW_DIR=/home/user/my_workflows
#   Multiple (comma):       WORKFLOW_DIR=/home/user/workflows,/opt/shared_workflows
#   Multiple (colon):       WORKFLOW_DIR=/home/user/workflows:/opt/shared_workflows
#
# Leave empty/unset to disable auto-discovery and use only built-in workflows
WORKFLOW_DIR=
